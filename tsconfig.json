{
	"compilerOptions": {
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"baseUrl": "./src",
		"outDir": "./build",
		"rootDir": "./src",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,                                      
    "skipLibCheck": true
	}
}